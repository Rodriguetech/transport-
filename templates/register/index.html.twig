{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}


<section class="is-forms">
   <div class="container">

      <h1 class="is-contact mt-4">Inscription</h1>


      <div class="row d-flex justify-content-center">
        <div class="col" style="max-width: 560px;">
         
         {% if  notify %}
             <div class="alert alert-success">
                {{notify}}
             </div>
         {% endif %}
    
         {% if  notifyError %}
             <div class="alert alert-danger">
                {{notifyError}}
             </div>
         {% endif %}

           {{ form_start(form) }}
         
          <div class="mb-3">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_row(form.nom,  {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}          
          </div>

          <div class="mb-3">
            {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_row(form.prenom,  {'attr': {'class': 'form-control' , 'placeholder': 'Votre prénom'}}) }}          
          </div>

          <div class="mb-3">
            {{ form_label(form.email, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_row(form.email,  {'attr': {'class': 'form-control' , 'placeholder': 'Votre email'}}) }}          
          </div>

          <div class="mb-3">
            {{ form_label(form.phone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_row(form.phone,  {'attr': {'class': 'form-control' , 'placeholder': 'Votre numéro de téléphone'}}) }}          
          </div>

          <div class="mb-3">
            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_row(form.password,  {'attr': {'class': 'form-control' , 'placeholder': '*************'}}) }}          
          </div> 

         {{ form_end(form) }}
        </div>
      </div>
   </div>
</section>

  
{% endblock %}
